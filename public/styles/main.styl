@import "nib"

body
  global-reset()
  background white
  font-family Verdana
  font-size 16px

  h1
    font-size 2em
    color #3f7f00
    font-weight bold
    text-align right
    margin-bottom 0.5em

  p
    margin 0.5em 0

  strong
    font-weight bold

  nav
    margin 1em 0 2em 0

    span
      display inline-block
      font-weight bold
      margin-right 1em
    a
      display inline-block
      width 100px
      background #d4ffaa
      color darken(#d4ffaa, 50%)
      padding 0.5em
      text-align center
      margin 5px
      border-radius 5px
      cursor pointer
      &.active
        color #fff
        background-color #3f7f00
        font-weight bold
      &:before
        content "✘ "
      &.active:before
        content "✔ "

  .poll

    input
      min-width 500px
      font-size 20px
      border-radius 5px
      padding 0.5em
      font-weight bold
      margin 30px 0

    .error
      color red
    input.error
        border 1px solid red

    table
      box-shadow 10px 10px 5px #888888
      border 1px solid #3f7f00
      border-radius 5px
      min-width 400px
      height 100%

      tbody

        tr:nth-child(odd)
          background-color white
        tr:nth-child(even)
          background-color #d4ffaa
        tr:hover
          background-color darken(#d4ffaa, 10%)

        td button
          min-width 180px
          min-height 60px
          background transparent
          border none
          outline none
          cursor pointer
          overflow-y auto
          &[disabled]
            cursor not-allowed
          &.selected
            outline 2px dashed darken(#d4ffaa, 60%)
          div.name
            &.myself
              font-weight bold

        td, th
          padding 0
          border 1px solid #3f7f00
          border-width 0 1px 1px 0
          text-align left
          font-size 16px
          color black
        th
          padding 0.5em
          font-weight bold

      thead

        th
          padding 0.5em 1em
          background linear-gradient(top, 5% #5fbf00, #3f7f00)
          background-color #5fbf00
          border 0 solid #3f7f00
          text-align center
          border-width 0 0 1px 1px
          font-size 18px
          font-weight bold
          color white

        tr:hover th
          background linear-gradient(bottom, 5% #5fbf00, #3f7f00)
          background-color #5fbf00

    ul
      margin 1em

      li
        margin 0.5em
      li:before
        content "→"
        padding-right 0.5em
